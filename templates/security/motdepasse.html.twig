    <h3 class="mx-auto text-center my-2">Veuillez entrer votre adresse Email</h3>

    {% if msgdata is defined  %}
    <p class="bg-success p-2 mx-auto col-md-4 my-4 text-center text-white">{{ msgdata }}</p>
        
