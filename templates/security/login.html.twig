                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('security_login') }} ">Connexion</a>
                    </li>

                    {% endif %} {% if app.user %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('blog_create') }}">Déposer une annonce</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Compte</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown04">
                            {% if not app.user %} {% else %}
                            <a class="dropdown-item" href="{{ path('annonce_personnel', {'id': app.user.id}) }}">{{ app.user.pseudo }}</a>
                            <a class="dropdown-item" href="{{ path('modifierProfil', {'id': app.user.id}) }}">Profil</a>
                            <a class="dropdown-item" href="{{ path('security_logout') }} ">Déconnexion</a> {% endif %}
                        </div>
                    </li>

                    {% endif %} {% if is_granted('ROLE_ADMIN') %}

                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('easyadmin') }}">BACKOFFICE</a>
                    </li>

                    {% endif %}

                </ul>
                <form class="form-inline my-2 my-md-0">
                    <input class="form-control" type="text" placeholder="Search" />
                </form>
            </div>
        </nav>

        <div id="desposer-annonce" class="deposer-annonce container col-md-5 p-3">
            <h2 class="deposer-annonce-titre col-md-6 text-center p-2 m-3 rounded">Déposer une annonce</h2>
            <h5 class="mt-5 text-white">Bonjour !</h5>
            <p class="text-white">Inscrivez-vous ou connnectez-vous pour déposer une annonce.</p>
            <div class="col-md-8 d-flex justify-content-around mt-5">
                <a class="rounded btn btn-dark" href="#">Connectez-vous</a>
                <a class="rounded btn btn-dark" href="{{ path('registration') }}">Inscrivez-vous</a>
            </div>
        </div>

        {####################################################################### Header #######################################################################################} {# {% if app.request %} #} {% block body %}

        <h1 class="display-4 text-center mt-2">Bonjour!</h1>
{% if error %}

	<p class="bg-danger text-white text-center p-2 col-md-3 m-3 mx-auto rounded">{{ error.messageKey|trans(error.messageData, 'security') }}</p>

{% endif %}


        <form action="{{ path('security_login') }}" method="post" class="col-md-5 mx-auto">

            <div id="colorBtnInput" class="form-group rounded border border-secondary pb-1p ">
                <label for="_username">Email</label>
<input type="text" class="form-control" name="_username" placeholder="Adresse email..." required="_username" value="{{ last_username }}">

            </div>



            <div id="colorBtnInput" class="form-group rounded border border-secondary">
                <label for="_password">Mot de passe</label>
                <input type="password" class="form-control" name="_password" placeholder="Mot de passe..." required="_password">
            </div>

            <div class="d-flex justify-content-around  ">
                <a href="#">Mot de passe oublié ?</a>
                <input id="colorBtnInput" type="submit" value="Connexion" class="btn">
            </div><em>
    </form>


        <div class="d-flex justify-content-center">
            <p>Pas encore de compte? <strong><a href="#">Créer un compte</a></strong> </p>
        </div></em> {% endblock %} {# {% endif %} #}
